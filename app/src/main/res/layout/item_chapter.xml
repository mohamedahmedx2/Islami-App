<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    tools:background="@drawable/background_image">

    <TextView
        android:id="@+id/chapter_index_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chapter"
        android:gravity="center"
        android:padding="8dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/en_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfont_com_janna_lt_bold"
        android:layout_marginStart="24dp"
        android:text="Al-Fatiha"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/number_verses_tv"
        app:layout_constraintStart_toEndOf="@id/chapter_index_tv"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="InvalidId">

    </TextView>

    <TextView
        android:id="@+id/number_verses_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 Verses"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/alfont_com_janna_lt_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/chapter_index_tv"
        app:layout_constraintStart_toStartOf="@id/en_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/en_title_tv"
        tools:ignore="InvalidId">

    </TextView>

    <TextView
        android:id="@+id/ar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="االفاتحه"
        android:textColor="@color/white"
        android:fontFamily="@font/alfont_com_janna_lt_bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/number_verses_tv">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>